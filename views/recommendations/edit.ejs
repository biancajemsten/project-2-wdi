<form enctype="multipart/form-data" method="POST" action="/countries/<%= country.id%>/recommendations/<%= recommendation.id%>">
  <input type="hidden" name="_method" value="POST">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= recommendation.title %>">
  </div>
  <div>
    <label for="city">City</label>
    <input type="text" name="city" id="city" value="<%= recommendation.city %>">
  </div>
  <div>
    <label for="content">Content</label>
    <input type="text" name="content" id="content" value="<%= recommendation.content %>">
  </div>
  <div class="file-field input-field">
    <div class="btn">
      <span>File</span>
      <input type="file" name="file" value="<%= recommendation.url %>">
    </div>
  </div>
  <button class="button">Update recommendation</button>
</form>
